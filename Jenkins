pipeline {
    agent any 
    stages {
        stage('clone repo and clean it') { 
            steps {
                sh "rm -rf my-maven-project"
                sh "git clone https://github.com/anilnda1997/my-maven-project.git"
                sh "mvn clean -f  my-maven-project"
            }
        }
        stage('Test') { 
            steps {
                sh "mvn test -f my-maven-project"
            }
        }
        stage('Deploy') { 
            steps {
                sh "mvn package -f my-maven-project"
            }
        }
    }
}
